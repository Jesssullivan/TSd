{
  "name": "tsd-demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/tsd-demo/src",
  "projectType": "application",
  "tags": ["type:app", "scope:demo"],
  "implicitDependencies": ["@tinyland/tsd"],
  "targets": {
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "tsd-demo:build",
        "port": 5173
      },
      "configurations": {
        "development": {
          "buildTarget": "tsd-demo:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "tsd-demo:build:production",
          "hmr": false
        }
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/tsd-demo",
        "baseHref": "/",
        "configFile": "apps/tsd-demo/vite.config.ts"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      },
      "dependsOn": ["^build"]
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "tsd-demo:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "tsd-demo:build:development"
        },
        "production": {
          "buildTarget": "tsd-demo:build:production"
        }
      }
    },
    "test": {
      "executor": "@tinyland/nx-tinymachines:vm-test",
      "options": {
        "vmName": "tsd-demo-test",
        "persist": false,
        "coverage": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "cwd": "apps/tsd-demo"
      }
    },
    "vm-serve": {
      "executor": "@tinyland/nx-tinymachines:vm-serve",
      "options": {
        "vmName": "tsd-demo-dev",
        "persist": true,
        "buildTarget": "tsd-demo:build:development"
      }
    }
  }
}